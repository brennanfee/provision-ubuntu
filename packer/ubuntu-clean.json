{
    "variables": {
        "ubuntu_version": "16.04",
        "ubuntu_version_full": "16.04.2",
        "checksum": "f529548fa7468f2d8413b8427d8e383b830df5f6"
    },

    "builders": [
    {
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "iso_url": "iso/{{user `ubuntu_version`}}/ubuntu-{{user `ubuntu_version_full`}}-server-amd64.iso",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "sha1",

        "headless": true,

        "http_directory": "http",

        "ssh_username": "vagrant",
        "ssh_password": "vagrant",

        "ssh_wait_timeout": "45m",
        "boot_wait": "10s",

        "shutdown_command": "echo 'vagrant' | sudo systemctl poweroff",

        "hard_drive_interface": "sata",
        "format": "ovf",
        "disk_size": "81920",
        "guest_additions_mode": "disable",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "4096"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"],
            ["modifyvm", "{{.Name}}", "--vram", "128"],
            ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
            ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"],
            ["modifyvm", "{{.Name}}", "--draganddrop", "bidirectional"],
            ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
            ["modifyvm", "{{.Name}}", "--mouse", "usb"],
            ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
            ["modifyvm", "{{.Name}}", "--audio", "coreaudio"],
            ["modifyvm", "{{.Name}}", "--audiocontroller", "hda"],
            ["modifyvm", "{{.Name}}", "--usbehci", "on"]
        ],

        "boot_command": [
            "<enter><wait>",
            "<f6><esc>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs>",
            "/install/vmlinuz ",
            "initrd=/install/initrd.gz ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-{{user `ubuntu_version`}}/preseed.cfg ",
            "<enter>"
        ]
    }],
    "provisioners": [
    {
        "type": "shell",
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "scripts": [
            "scripts/vagrant.sh"
        ]
    },
    {
        "type": "shell",
        "inline": [
            "curl -fsSL https://bit.ly/29fr6OQ | sudo -E /bin/bash",
            "sudo reboot && sleep 60"
        ]
    },
    {
        "type": "shell",
        "pause_before": "30s",
        "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
        "scripts": [
            "scripts/vboxguest-console.sh",
            "scripts/do_reboot.sh"
        ]
    },
    {
        "type": "shell",
        "pause_before": "30s",
        "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
        "scripts": [
            "scripts/cleanup.sh",
            "scripts/minimize.sh"
        ]
    }],
    "post-processors": [
    {
        "output": "boxes/bfee-ubuntu-{{user `ubuntu_version`}}-clean.box",
        "type": "vagrant"
    }]
}
